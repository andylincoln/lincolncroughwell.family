
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"modules": true
		}
	},
	"env": {
		"browser": true,
		"node": false
	},
	"extends": "eslint:recommended",
	"rules": {
		"noconsole": ["warn", "noconsole"],
		"indent": ["warn", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["warn", "double"],
		"semi": ["error", "always"]
	}
}
